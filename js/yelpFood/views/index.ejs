<% include partials/header %>
		


<div class = "container">
	<header class = "jumbotron">
		<div class = "container">
			<h1> ~ Menu ~</h1>
			<p> Here are several Mexico foods. </p>
			<p>
				<a class="btn btn-primary btn-large" href="/menu/form"> Add a New Food </a>
			</p>
		</div>
	</header>
 
	<div class = "row" style="display:flex; flex-wrap:wrap">
		<div class="col-lg-12">
			<h3> Our pop foods </h3>
		</div>
	

		<% menu.forEach(function(menu){%>
			<div class = "col-md-3 col-md-6">

				<div class="thumbnail">
					<img src= "<%= menu.image%>" >
				</div>

				<div class="caption">
					<h4> <%= menu.name %> </h4>
				</div>

				<p>
					<a href = "/menu/<%= menu._id %>" class = "btn btn-primary"> Descriptions </a>
				</p>

			</div>
		<%})%>

	</div>

</div>
<% include partials/footer %>